{
    "name": "betterworldcollective/scribe-php",
    "description": "An object based analytics driver for PHP with built-in support for Narrative.",
    "license": "MIT",
    "authors": [
        {
            "name": "Prince John Santillan",
            "email": "mail@princejohnsantillan.net"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/saloon": "^3.14",
        "princejohnsantillan/reflect": "^1.1"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1",
        "pestphp/pest": "^3.8"

    },
    "autoload": {
        "psr-4": {
            "BetterWorld\\Scribe\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "@php vendor/bin/pint",
        "analyse": "@php vendor/bin/phpstan analyse --memory-limit=-1",
        "rectify": "@php vendor/bin/rector process",
        "test": "@php vendor/bin/pest",
        "qa": [
            "@lint",
            "@analyse",
            "@rectify",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
